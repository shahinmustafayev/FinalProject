<%- include('../layout/header');  %>

    <div class="card mt-3">
        <div class="card-body">
            <div class="card-header">
                <div class="card-title">
                    <h3>Add Product Page</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <div class="row mx-0 mt-3">
                <div class="col-12">
                    <div class="table-responsive">
                        <div class="card shadow mb-4">
                            <div class="card-body">
                                    <form action="/product/add" method="post" enctype="multipart/form-data">
                                        <div class="col-12 d-flex">
                                            <div class="col-6 mt-2">
                                                    <label for="name">Product Name</label>
                                                    <input type="text" id="name" name="name" class="form-control" required placeholder="Enter name...">
                                            </div>

                                            <div class="col-6 mt-2">
                                                <label for="description">Description</label>
                                                <input type="text" class="form-control" id="description" name="description" required placeholder="Enter description...">
                                            </div>
                                        </div>

                                        <div class="col-12 d-flex">
                                            
                                            <div class="col-6 mt-2">
                                                <label for="categoryid"> Category Name </label>
                                                <select class="form-control" name="categoryid" id="categoryid">
                                                <% data.forEach(x => { %>
                                                    <option value="<%= x.id %>"><%= x.name %></option>
                                                <% }) %>
                                                </select>
                                            </div>

                                            <div class="col-6 mt-2">
                                                <label for="image">Image</label>
                                                <input class="form-control" name="image" required type="file" id="image" placeholder="Enter image file...">
                                            </div>

                                        </div>


                                        <div class="col-12 d-flex">

                                            <div class="col-6 mt-2">
                                                    <label for="isdeleted"> IsDeleted </label> 
                                                        <select class="form-control" name="isdeleted" id="isdeleted">
                                                            <option value="0">Deaktiv</option>
                                                            <option value="1">Aktiv</option>
                                                        </select>
                                            </div>

                                            <div class="col-6 mt-2">
                                                <label for="model"> Model </label> 
                                                    <input type="text" name="model" id="model" required class="form-control" placeholder="Enter model....">
                                            </div>

                                        </div>


                                        <div class="col-12 d-flex">
                                            <div class="col-4 mt-2">
                                                    <label for="price">Price</label>
                                                    <input type="number" id="price" name="price" required class="form-control" placeholder="Enter price...">
                                            </div>

                                            <div class="col-4 mt-2">
                                                <label for="old_price">Old Price</label>
                                                <input type="number" class="form-control" id="old_price" required name="old_price" placeholder="Enter old_price...">
                                            </div>

                                            <div class="col-4 mt-2">
                                                <label for="date">Date</label>
                                                <input type="datetime-local" class="form-control" id="date" name="date" placeholder="Enter date...">
                                            </div>
                                        </div>

                                            <div class="card-footer mt-5">
                                                <div class="row">
                                                    <div class="col-lg-5"></div>
                                                    <div class="col-lg-7">
                                                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                                        <a href="/product"><button type="button" class="btn btn-secondary">Cancel</button></a>
                                                    </div>
                                            </div>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('../layout/footer');  %>