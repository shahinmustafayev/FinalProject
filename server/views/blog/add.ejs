<%- include('../layout/header');  %>

    <div class="card mt-3">
        <div class="card-body">
            <div class="card-header">
                <div class="card-title">
                    <h3>Add Blog Page</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <div class="row mx-0 mt-3">
                <div class="col-12">
                    <div class="table-responsive">
                        <div class="card shadow mb-4">
                            <div class="card-body">
                                    <form action="/blog/add" method="post" enctype="multipart/form-data">
                                        <div class="col-12 d-flex">
                                            <div class="col-6 mt-2">
                                                    <label for="title">Blog Title</label>
                                                    <input type="text" id="title" name="title" class="form-control" placeholder="Enter blog title...">
                                            </div>

                                            <div class="col-6 mt-2">
                                                <label for="description">Description</label>
                                                <input type="text" class="form-control" id="description" name="description" placeholder="Enter description...">
                                            </div>
                                        </div>

                                        <div class="col-12 d-flex">
                                            
                                            <div class="col-6 mt-2">
                                                <label for="author"> Author </label>
                                                <input type="text" name="author" id="author" class="form-control" placeholder="Enter author....">
                                            </div>

                                            <div class="col-6 mt-2">
                                                <label for="date">Date</label>
                                                <input type="date" class="form-control" id="date" name="date" placeholder="Enter date...">
                                            </div>

                                        </div>


                                        <div class="col-12 d-flex">

                                            <div class="col-6 mt-2">
                                                <label for="image">Image</label>
                                                <input class="form-control" name="image" type="file" id="image" placeholder="Enter image file...">
                                            </div>

                                            <div class="col-6 mt-2">
                                                    <label for="isdeleted"> IsDeleted </label> 
                                                        <select class="form-control" name="isdeleted" id="isdeleted">
                                                            <option value="0">Deaktiv</option>
                                                            <option value="1">Aktiv</option>
                                                        </select>
                                            </div>

                                        </div>

                                            <div class="card-footer mt-5">
                                                <div class="row">
                                                    <div class="col-lg-5"></div>
                                                    <div class="col-lg-7">
                                                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                                        <a href="/blog"><button type="button" class="btn btn-secondary">Cancel</button></a>
                                                    </div>
                                            </div>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('../layout/footer');  %>